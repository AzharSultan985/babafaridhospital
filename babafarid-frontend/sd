const getLatestAppDate = (patient) => {
  if (!patient.Appointment || patient.Appointment.length === 0) return null;
  return patient.Appointment.reduce((latest, curr) =>
    new Date(curr.Appdate) > new Date(latest.Appdate) ? curr : latest
  ).Appdate;
};

